<%= turbo_stream_from current_user, "movements" %>
<main class="container">
<header>
    <div class="header">
        <div class="header_heading">
            <h1>Movements</h1>
        </div>
    </div>

<%= turbo_frame_tag Movement.new %>

<%= turbo_frame_tag "movements" do %>
    <%= render @movements %>
<% end %>

</main>
<footer class="footer">
        <%= link_to "New movement",
            new_movement_path,
            class: "btn btn_primary",
            data: { turbo_frame: dom_id(Movement.new) }
            %>
</footer>
