<main class="container">
<%= turbo_frame_tag "header_workout_#{@workout.id}" do %>
    <%= render "workout_header" %>
<% end %>

<h2>Exercises</h2>

<% @exercises.each do |exercise| %>
  <% if exercise.movement_id %>
    <%= link_to workout_exercise_path(@workout, exercise), class: "workout" do %>
      <%= Movement.find(exercise.movement_id).name %>
      <% @series.where(exercise_id: exercise.id).each do |serie| %>
        <p class="workout_note"><%= serie.weight %> kg - <%= pluralize(serie.repetition, 'rep') %></p>
      <% end %>
    <% end %>
  <% end %>
<% end %>

</main>

<footer class="footer">
  <%= link_to "New exercise", new_workout_exercise_path(@workout), class: "btn btn--primary" %>
</footer>
