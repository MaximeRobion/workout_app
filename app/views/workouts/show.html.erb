<h1><%= @workout.date.to_fs(:long_ordinal) %></h1>
<p><%= @workout.note %></p>

<h2>Exercises</h2>
<ul>
<% @exercises.each do |exercise| %>
  <li><%= link_to Movement.find(exercise.movement_id).name, workout_exercise_path(@workout, exercise) %></li>
<% end %>
</ul>

<p><%= link_to "New exercise", new_workout_exercise_path(@workout) %></p>

<%= link_to "Edit", edit_workout_path(@workout) %>
<%= link_to "Destroy", workout_path(@workout), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
