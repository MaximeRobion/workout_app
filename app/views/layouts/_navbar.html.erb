<header class="navbar">
  <% if user_signed_in? %>
    <ul class="navbar_nav">
        <li><%= link_to "Workouts", workouts_path %></li>
        <li><%= link_to "Movements", movements_path %></li>
    </ul>
    <div class="navbar_username">
      <%= current_user.name %>
    </div>
    <%= button_to "logout",
                  destroy_user_session_path,
                  method: :delete,
                  class: "material-symbols-outlined" %>
  <% else %>
    <%= link_to "Sign in",
                new_user_session_path,
                class: "btn btn_dark navbar_right" %>
  <% end %>
</header>
